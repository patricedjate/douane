{% extends 'agentdashboardbase.html.twig' %}

{% block title %}agent Dashboard{% endblock %}

{% block body %}

	<h4 class="mb-3">Tableau De Bord</h4>
	<div class="row">
		<div class="col-xl-4 col-sm-6 col-12">
			<div class="card">
				<div class="card-body">
					<div class="dash-widget-header">
						<span class="dash-widget-icon bg-primary">
							<i class="feather-check"></i>
						</span>
						<div class="dash-count">
							<h5 class="dash-title">Demande D'empotage traité</h5>
							<div class="dash-counts">
								<p>{{nombreFicheTraite}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-xl-4 col-sm-6 col-12">
			<div class="card">
				<div class="card-body">
					<div class="dash-widget-header">
						<span class="dash-widget-icon bg-blue">
							<i class="feather-alert-triangle"></i>
						</span>
						<div class="dash-count">
							<h5 class="dash-title">Demande d'empotage non traité</h5>
							<div class="dash-counts">
								<p>{{nombreFicheNonTraite}}</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
{% endblock %}